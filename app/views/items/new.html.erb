<%= render "shared/header" %>

<h2>New Item</h2>

<%= form_for @item do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.text_field :brand, placeholder: "Brand" %>
  <%= f.text_field :category, placeholder: "Category" %>
  <%= f.file_field :image %>
  <%= f.submit "Add item" %>
<% end %>
