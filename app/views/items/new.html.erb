<%= render "shared/header" %>
<div class="container">
  <div class="row">
    <div class="col s12 m2"></div>
    <div class="col s12 m6">
        <h4 class="form-title">Add a new item</h4>
          <%= form_for @item do |f| %>
            <label for="name">Item name</label>
            <%= f.text_field :name, placeholder: "Green flannel" %>
            <label for="brand">Brand</label>
            <%= f.text_field :brand, placeholder: "Ralph Lauren" %>
            <label for="category">Category</label>
            <%= f.text_field :category, placeholder: "shirts"%>


            <%= f.file_field :image %> <br/>
            <div class="submit-new-item right-align">
            <button class="btn waves-effect green" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
            </div>
          <% end %>
        </div>
    <div class="col s12 m2"></div>
  </div>
</div>
<script>
$(document).ready(function() {
    $('select').material_select();
  });

</script>
