<script type="text/javascript">
  $(document).ready(function(){

    $('.item').on('click', function(e){
      e.preventDefault();
      console.log("user clicked item!");
      let item_id = $(this).closest('.item').data('item-id');
      $('input[name=shirt_id]').val(item_id);
      $('input[name=pants_id]').val(item_id);
      $('input[name=shoes_id]').val(item_id);

      console.log("item-id is", item_id);
    });

  });
</script>


<div class="container-fluid">
    <div class="row main">
        <div class="col s12 m4 sidebar">

            <div class="right-align">
            <a href="http://localhost:3000/items/new" class="btn-floating fab btn-xs waves-effect waves-light right-align amber"><i class="material-icons">add</i></a>
