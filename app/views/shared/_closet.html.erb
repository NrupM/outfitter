                    <div class="clothing-type">
                      <% shirts = @items.select {|element| element.category == "shirt"} %>
                      <% shirts.each do |item| %>
                      <div class="col s12 m4">
                          <div class="item" data-item-id="<%= item.id %>">
                            <%= image_tag item.image.url(:medium) %><br>
                            <%= link_to "Edit", controller: "items", action: "edit", id: item.id %>
                          </div>
                      </div>
                      <% end %>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="clothing-type-title">
