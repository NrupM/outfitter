<%= render "shared/header" %>
<div class="container">


  <h3> My Outfits </h3>
  <div class="row">


  <% @outfits.each do |outfit| %>
    <div class="col s12 m4 center-align">
          <p>
          <span class="outfit-name"> <%= outfit.name %></span><br>
            <strong>Tag:</strong> <%= outfit.tag %><br>


              <% outfit.items.each do |item| %>

               <%= image_tag item.image.url(:small) %><br>

              <% end %>
              <%= link_to "Edit", controller: "outfits", action: "edit", id: outfit.id %><br>

          </p>
    </div>
  <% end %>
  </div>

</div>
